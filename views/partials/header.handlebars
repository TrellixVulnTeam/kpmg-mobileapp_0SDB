          <input id="chatbot" class="chatbot-logo" type="image" src="/images/chatbot.png" onclick="openChatBox()" width="40px" height="40px" alt="Submit" />
          <div class="chatbot-box-anchor" id="chatbot-box-anchor"></div>
          <div class="chatbot-box" id="chatbot-box">
            <div class="chatbot-box-display" id="chatbot-box-display">
              <div class="msg-container" id="msg-container">
                <p>Hello</p>
              </div>
              <div class="msg-dis" id="msg-dis"></div>
              <div class="msg-container" id="msg-container">
                <p>What is your problems ?</p>
              </div>
              <div class="msg-dis" id="msg-dis"></div>             
            </div>

            <input class="chatbot-box-input" id="chatbot-box-input"></input>
            <button class="chatbot-box-btn" id="chatbot-box-btn" onclick="sendMsg()">send</button>
          </div> 
        </div>
