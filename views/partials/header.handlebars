    <script>
      $("#chatbot").hover(function(){
        $("#dot").css("background-color", "white");
        }, function(){
        $("#dot").css("background-color", "transparent");
      });

      function openChatBox() {
        window.addEventListener('click', function(e){   
          if (document.getElementById('chatbot').contains(e.target) || document.getElementById('chatbot-box').contains(e.target) || document.getElementById('chatbot-box-display').contains(e.target)){
            document.getElementById("chatbot-box-anchor").style.display = "inline-block";
            document.getElementById("chatbot-box").style.display = "inline-block";
          } else{
            document.getElementById("chatbot-box-anchor").style.display = "none";
            document.getElementById("chatbot-box").style.display = "none";
          }
        });
        
      }

      function sendMsg() {
          var clone_msg = document.getElementById("msg-container");
          var new_msg = clone_msg.cloneNode(true);
          new_msg.querySelector("p").innerHTML = document.getElementById("chatbot-box-input").value;
          new_msg.style.background = "#e2e2e2";
          document.getElementById("chatbot-box-display").appendChild(new_msg);

          var new_msg_dis = document.getElementById("msg-dis").cloneNode(true);
          document.getElementById("chatbot-box-display").appendChild(new_msg_dis);
      }
   
    </script>


